<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_people">

    <fragment
        android:id="@+id/nav_people"
        android:name="com.tes.eat.anywhere.roomallocatorapp.ui.People.PeopleFragment"
        android:label="@string/menu_people"
        tools:layout="@layout/fragment_people" >
        <action
            android:id="@+id/action_nav_people_to_nav_PersonDetail"
            app:destination="@id/nav_PersonDetail" />
    </fragment>

    <fragment
        android:id="@+id/nav_room"
        android:name="com.tes.eat.anywhere.roomallocatorapp.ui.Room.RoomFragment"
        android:label="@string/menu_room"
        tools:layout="@layout/fragment_room" />
    <fragment
        android:id="@+id/nav_PersonDetail"
        android:name="com.tes.eat.anywhere.roomallocatorapp.ui.People.PersonDetailFragment"
        android:label="Person Detail" />

</navigation>